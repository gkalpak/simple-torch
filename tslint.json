{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "jsRules": {},
  "rules": {
    "arrow-parens": [true, "ban-single-arg-parens"],
    "curly": [true, "ignore-same-line"],
    "max-classes-per-file": [true, 4],
    "member-ordering": [
      true,
      {
        "order": [
          {
            "name": "static field/accessor",
            "kinds": [
              "static-field",
              "static-accessor"
            ]
          },
          {
            "name": "instance field/accessor",
            "kinds": [
              "instance-field",
              "instance-accessor"
            ]
          },
          "constructor",
          "static-method",
          "instance-method"
        ]
      }
    ],
    "no-consecutive-blank-lines": [true, 2],
    "no-console": [false],
		"no-duplicate-variable": [true, "check-parameters"],
    "no-focused-test": true,
    "no-skipped-test": true,
    "object-literal-key-quotes": false,
    "quotemark": [true, "single"],
    "space-before-function-paren": false,
    "variable-name": [true, "allow-leading-underscore", "allow-trailing-underscore", "ban-keywords", "check-format"]
  },
  "rulesDirectory": [
    "node_modules/tslint-jasmine-noSkipOrFocus/"
  ]
}
