{
  "private": true,
  "name": "@gkalpak/simple-torch",
  "version": "0.0.9",
  "description": "A simple torch PWA using the `MediaDevices` API.",
  "keywords": [
    "MediaCapabilities",
    "MediaDevices",
    "Progressive Web App",
    "PWA",
    "Torch",
    "Utility"
  ],
  "scripts": {
    "prebuild": "npm run clean-up",
    "build": "run-p ~~compile ~~generate-app",
    "prebuild-prod": "npm run prebuild",
    "build-prod": "run-s ~~compile ~~compile-sw \"~~generate-app -- --production\"",
    "clean-up": "node --eval \"require('shelljs/global'); set('-e'); rm('-rf', 'out/');\"",
    "predeploy": "npm run build-prod",
    "deploy": "firebase deploy --only=hosting",
    "predev": "npm run build || true",
    "dev": "run-p --race ~~compile-watch ~~generate-app-watch ~~serve-watch ~~test-unit-watch",
    "generate-favicon": "convert-svg-to-png --filename=src/favicon.png --width=128 --height=128 < src/assets/images/simple-torch.svg",
    "lint": "tslint --project tsconfig.json",
    "release": "gkcu-run \"npm version \\${*:patch}\"",
    "postrelease": "npm run deploy",
    "preserve": "npm run build-prod",
    "serve": "npm run ~~serve -- --port=4002 --no-reload",
    "pretest": "npm run build",
    "test": "run-s lint ~~test-unit ~~test-e2e",
    "preversion": "run-s lint ~~compile ~~test-unit",
    "postversion": "git push && git push --tags",
    "~~compile": "tsc --project ./",
    "~~compile-sw": "tsc --project tsconfig.sw.json",
    "~~compile-watch": "npm run ~~compile -- --watch",
    "~~generate-app": "node scripts/generate-app",
    "~~generate-app-watch": "watch \"npm run ~~generate-app\" src/ --filter=watch-filters/generate-app.filter.js",
    "~~serve": "light-server --bind=localhost --serve=out/",
    "~~serve-watch": "npm run ~~serve -- --port=4001 --quiet --watchexp=out/**",
    "~~test-e2e": "node --print \"'No e2e tests yet.\\n'\" && exit 1",
    "~~test-unit": "npm run ~~test-unit-watch -- --single-run",
    "~~test-unit-watch": "karma start"
  },
  "license": "Unlicense",
  "author": "gkalpak <kalpakas.g@gmail.com>",
  "homepage": "https://github.com/gkalpak/simple-torch#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gkalpak/simple-torch.git"
  },
  "dependencies": {},
  "devDependencies": {
    "@gkalpak/cli-utils": "^0.1.7",
    "@types/jasmine": "^3.3.12",
    "convert-svg-to-png": "^0.5.0",
    "firebase-tools": "^6.9.2",
    "jasmine-core": "^3.4.0",
    "karma": "^4.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-jasmine": "^2.0.1",
    "karma-sourcemap-loader": "^0.3.7",
    "light-server": "^2.6.2",
    "npm-run-all": "^4.1.5",
    "shelljs": "^0.8.3",
    "tslint": "^5.16.0",
    "tslint-jasmine-noSkipOrFocus": "^1.0.9",
    "typescript": "^3.4.5",
    "watch": "^1.0.2"
  }
}
