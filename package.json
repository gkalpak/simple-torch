{
  "private": true,
  "name": "@gkalpak/simple-torch",
  "version": "0.2.0",
  "description": "A simple torch PWA using the `MediaDevices` API.",
  "keywords": [
    "MediaCapabilities",
    "MediaDevices",
    "Progressive Web App",
    "PWA",
    "Torch",
    "Utility"
  ],
  "scripts": {
    "prebuild": "npm run clean-up",
    "build": "run-p ~~compile-app ~~generate-app",
    "prebuild-prod": "npm run prebuild",
    "build-prod": "run-s ~~compile-all \"~~generate-app -- --production\"",
    "clean-up": "node --eval \"require('shelljs/global'); set('-e'); rm('-rf', 'out/');\"",
    "predeploy": "npm run build-prod",
    "deploy": "firebase deploy --only=hosting",
    "predev": "npm run build || true",
    "dev": "run-p --race ~~compile-app-watch ~~generate-app-watch ~~serve-watch ~~test-unit-watch",
    "generate-icons": "node scripts/generate-icons.mjs",
    "postinstall": "patch-package",
    "lint": "run-p ~~lint-code ~~typecheck-scripts",
    "release": "gkcu-run \"npm version \\${*:patch}\"",
    "postrelease": "npm run deploy",
    "preserve-prod": "npm run build-prod",
    "serve-prod": "npm run ~~serve-prod",
    "pretest": "npm run build-prod",
    "test": "run-s lint ~~test-unit ~~test-e2e ~~test-web-app",
    "pretest-e2e": "npm run preserve-prod",
    "test-e2e": "npm run ~~test-e2e",
    "pretest-unit": "npm run build",
    "test-unit": "npm run ~~test-unit",
    "pretest-web-app": "npm run preserve-prod",
    "test-web-app": "npm run ~~test-web-app",
    "preversion": "run-s lint build ~~test-unit ~~test-web-app",
    "postversion": "git push && git push --tags",
    "~~compile-all": "run-p ~~compile-app ~~compile-sw",
    "~~compile-app": "tsc --build tsconfig.json",
    "~~compile-app-watch": "npm run ~~compile-app -- --watch",
    "~~compile-sw": "tsc --project tsconfig.sw.json",
    "~~generate-app": "node scripts/generate-app.mjs",
    "~~generate-app-watch": "watch \"npm run ~~generate-app\" src/app/ --filter=watch-filters/generate-app.filter.js",
    "~~lint-code": "eslint ./",
    "~~run-lighthouse": "node scripts/run-lighthouse.mjs",
    "~~run-web-app-audits": "run-s \"~~run-lighthouse -- {@}\" \"~~run-webhint -- .\" --",
    "~~run-webhint": "hint",
    "~~serve": "light-server --bind=localhost --serve=out/app/",
    "~~serve-prod": "npm run ~~serve -- --port=4002 --no-reload",
    "~~serve-watch": "npm run ~~serve -- --port=4001 --quiet --watchexp=out/app/**",
    "~~test-e2e": "node --print \"'No e2e tests yet.\\n'\" && exit 1",
    "~~test-unit": "npm run ~~test-unit-watch -- --single-run",
    "~~test-unit-watch": "karma start",
    "~~test-web-app": "run-p --race \"~~serve-prod -- --quiet\" \"~~run-web-app-audits -- http://localhost:4002 all:100,performance:95 {1}\" --",
    "~~typecheck-scripts": "tsc --project jsconfig.json"
  },
  "license": "Unlicense",
  "author": "gkalpak <kalpakas.g@gmail.com>",
  "homepage": "https://github.com/gkalpak/simple-torch#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gkalpak/simple-torch.git"
  },
  "devDependencies": {
    "@gkalpak/cli-utils": "^0.1.10",
    "@types/jasmine": "^5.1.4",
    "@types/karma": "^6.3.8",
    "@types/karma-jasmine": "^4.0.5",
    "@types/node": "^20.14.0",
    "@types/shelljs": "^0.8.15",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "chrome-launcher": "^1.1.1",
    "convert-svg-to-png": "^0.6.4",
    "eslint": "^8.57.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jasmine": "^4.1.3",
    "firebase-tools": "^13.10.2",
    "hint": "^7.1.12",
    "jasmine-core": "^5.1.2",
    "karma": "^6.4.3",
    "karma-chrome-launcher": "^3.2.0",
    "karma-jasmine": "^5.1.0",
    "karma-sourcemap-loader": "^0.4.0",
    "light-server": "^2.9.1",
    "lighthouse": "^12.0.0",
    "npm-run-all": "^4.1.5",
    "patch-package": "^8.0.0",
    "puppeteer": "^22.10.0",
    "shelljs": "^0.8.5",
    "typescript": "^5.4.5",
    "watch": "^1.0.2"
  }
}
